version: '3.3'
services:
  mydb:  
    image: mysql:5.7
    container_name : appdb
    networks:
      - mynw
    restart: always
    environment:
      MYSQL_DATABASE: 'inventory'
      MYSQL_USER: 'root'
      MYSQL_PASSWORD: 'root@123'
      MYSQL_ROOT_PASSWORD: 'root@123'
    ports:
       - '3306:3307'
    volumes:
      - mydb:/var/lib/mysql
  web-service:
    image: vinisalgaonkar/productservice:latest
    container_name : productservice
    ports:
      - '9000:9000'
    networks:
      - mynw
    depends_on:
      - mydb
volumes:
  mydb:
networks:
  mynw: